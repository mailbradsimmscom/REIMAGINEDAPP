entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

# Start your server. Do NOT force a port.
run = ["bash","-lc","npm start"]

[deployment]
run = ["bash","-lc","npm start"]
deploymentTarget = "autoscale"
ignorePorts = true

[[ports]]
localPort = 3000
externalPort = 80

# Remove custom port mappings entirely. (Delete both [[ports]] blocks)
